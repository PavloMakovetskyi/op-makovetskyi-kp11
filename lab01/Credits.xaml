        <Label Content="KP-11" HorizontalAlignment="Center" Margin="0,192,0,0" VerticalAlignment="Top" Foreground="White" FontFamily="Courier New" FontSize="24"/>
        <Label Content="2022" HorizontalAlignment="Center" Margin="0,293,0,0" VerticalAlignment="Top" Foreground="White" FontFamily="Courier New" FontSize="24"/>
        <Button x:Name="MainMenuButton" Content="Main Menu" HorizontalAlignment="Left" Margin="10,19,0,0" VerticalAlignment="Top" Height="45" Width="171" FontSize="18" Click="MainMenuButton_Click"/>

    </Grid>
